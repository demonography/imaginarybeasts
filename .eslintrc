{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
    "indent": [
      "warn",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": ["warn", "unix"],
    "quotes": ["warn", "single"],
    "no-console": ["off"],
    "no-unused-vars": ["warn"],
    "no-undef": ["warn"],
    "semi": ["warn", "always"]
  }
}
